---
interface ContactLink {
  label: string;
  href: string;
}

interface Props {
  links?: ContactLink[];
}

const { links = [
  { label: 'GitHub', href: 'https://github.com/rita-rita24' },
  { label: 'X', href: 'https://x.com/Ar2tDev' },
  { label: 'note', href: 'https://note.com/rita_rita_24' }
] } = Astro.props;
---

<div class="section-container">
  <h2 class="section-title">コンタクト</h2>
  <section id="contact">
    <div class="contact-grid">
      {links.map((link) => (
        <a href={link.href} class="contact-item" target="_blank" rel="noopener noreferrer">
          <span class="contact-label">{link.label}</span>
        </a>
      ))}
    </div>
  </section>
</div>

<footer>
  <p>© 2025 Your Name - All Rights Reserved</p>
</footer>
