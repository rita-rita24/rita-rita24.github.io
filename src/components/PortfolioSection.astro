---
interface Work {
  label: string;
  tech?: string;
}

interface Props {
  works?: Work[];
}

const { works = [
  { label: 'AI Method Board', tech: 'Spring Boot' },
  { label: 'File Manager', tech: 'Tauri + Rust' },
  { label: 'Rhythm Game', tech: 'Three.js' },
  { label: 'Learning Platform', tech: 'Next.js' },
  { label: 'CLI Tool', tech: 'Rust' },
  { label: 'Dev Tools', tech: 'TypeScript' }
] } = Astro.props;
---

<div class="section-container">
  <h2 class="section-title">メモ</h2>
  <section id="works">
    <div class="works-grid">
      {works.map((work) => (
        <div class="work-item">
          <div class="work-label">{work.label}</div>
          {work.tech && <div class="work-tech">{work.tech}</div>}
        </div>
      ))}
    </div>
  </section>
</div>
